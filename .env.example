# Database Configuration
# For Azure SQL (when subscription is active)
SQL_SERVER=your_sql_server.database.windows.net
SQL_DATABASE=your_database_name
SQL_USERNAME=your_username
SQL_PASSWORD=your_password

# Local Database Configuration
# Set to 'sqlite' to use local SQLite database, 'azuresql' for Azure SQL
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./local_crypto.db

# Offline Mode - Set to true to use mock data instead of database
OFFLINE_MODE=false

# Telegram Configuration
TELEGRAM_ENABLED=true
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# AI API Configuration
AI_API_KEY=your_gemini_or_perplexity_api_key
AI_API_TYPE=gemini

# Azure Storage (optional for local testing)
AzureWebJobsStorage=UseDevelopmentStorage=true

# OneDrive Configuration (optional)
ONEDRIVE_CLIENT_ID=your_client_id
ONEDRIVE_CLIENT_SECRET=your_client_secret
ONEDRIVE_TENANT_ID=your_tenant_id
ONEDRIVE_REFRESH_TOKEN=your_refresh_token

# Email Configuration (optional)
EMAIL_SENDER=your_email@example.com
EMAIL_RECEIVER=receiver@example.com
EMAIL_PASSWORD=your_email_password
